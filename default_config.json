{
  "ollama": {
    "model": "qwen3:4b",
    "server": {
      "host": "localhost",
      "port": 11434,
      "protocol": "http"
      },
    "context_window": 16384,
    "temperature": 0.7
  },
  "history": {
    "save_format": ["markdown", "plaintext"],
    "storage_path": "./data/chats",
    "max_history_size": 10000
  },
  "ui": {
    "chat_win_width": 80,
    "chat_win_height": 20,
    "chat_win_pos": "center",
    "input_win_height": 3,
    "input_win_width": 80,
    "window_gap": 1,
    "border_style": "rounded",
    "show_icons": true,
    "start_in_insert_mode": true,
    "auto_scroll": true,
    "layout": "vertical"
  },
  "log": {
    "level": "debug",
    "path": "~/ollama_chat_debug.log",
    "max_file_size": "100MB"
  }
}
